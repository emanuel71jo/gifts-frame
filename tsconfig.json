{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["app/controllers/*"],
      "@entities/*": ["app/entities/*"]
    }
  }
}
